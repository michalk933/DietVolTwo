<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_product"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="#E8F5F9"
        card_view:contentPadding="5dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rowCount="4"
            android:id="@+id/productGridLayout"
            android:useDefaultMargins="true">


            <ImageView
                android:id="@+id/image_view_product"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="4" />

            <TextView
                android:id="@+id/name_product_text_view"
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="52px"/>

            <TextView
                android:id="@+id/kcal_oroduct_text_view"
                android:text="kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="52px"/>

            <TextView
                android:id="@+id/ig_product_text_view"
                android:text="ig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="52px"/>

            <TextView
                android:id="@+id/carbohydrate_product_text_view"
                android:text="Ww"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:textSize="52px"/>

            <TextView
                android:id="@+id/protein_product_text_view"
                android:text="B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:textSize="52px"/>

            <TextView
                android:id="@+id/fat_product_text_view"
                android:text="T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:textSize="52px"/>
        </GridLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>