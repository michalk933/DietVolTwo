<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_meal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:useDefaultMargins="true"
    card_view:cardBackgroundColor="#E8F5F9"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_meal_tex"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="1"
            android:textSize="60dp" />

        <LinearLayout
            android:id="@+id/layout_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_normal">


            <TextView
                android:id="@+id/kcal_meal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Kcal :"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/change_carbo_meal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Wymiennik węglowodanowy :"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/carbohydrate_meal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Węglowodany :"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/protein_meal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Białko :"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/fat_meal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Tłuszcze :"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>