<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_meal"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="#E8F5F9"
        card_view:contentPadding="5dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:rowCount="2"
            android:columnCount="4"
            android:id="@+id/MealGridLayout"
            android:useDefaultMargins="true">
            <TextView
                android:id="@+id/number_meal_text_view"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/kcal_meal_text_view"
                android:text="Kcal :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/change_carbo_meal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="Wymiennik węglowodanowy :" />

            <TextView
                android:id="@+id/carbohydrate_meal_text_view"
                android:text="Węglowodany :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1" />

            <TextView
                android:id="@+id/protein_meal_text_view"
                android:text="Białko :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1" />

            <TextView
                android:id="@+id/fat_meal_text_view"
                android:text="Tłuszcze :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1" />


        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>